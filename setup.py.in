from distutils.core import setup, Extension
import sys, os, re

import newrelic.version

base_version = newrelic.version.version
build_number = os.environ.get('HUDSON_BUILD_NUMBER', '0')
copyright = '(C) Copyright 2010-2011 New Relic Inc. All rights reserved.'

version = "%s.%s" % (base_version, build_number)

script_directory = os.path.dirname(__file__)
if not script_directory:
  script_directory = os.getcwd()

config_guess = os.path.join(script_directory, 'config.guess')

packages = [
  "newrelic",
  "newrelic.api",
  "newrelic.core",
  "newrelic.hooks",
  "newrelic.lib",
  "newrelic.lib.sqlparse",
  "newrelic.lib.sqlparse.engine",
  "newrelic.scripts",
]

setup(
  name = "newrelic",
  version = base_version,
  description = "Python agent for New Relic",
  author = "New Relic",
  author_email = "support@newrelic.com",
  license = copyright,
  url = "http://www.newrelic.com",
  packages = packages,
  extra_path = ("newrelic", "newrelic-%s" % version),
)
